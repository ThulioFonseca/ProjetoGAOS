@model ProjetoGAOS.Models.Cliente;

@{

    Layout = "_Layout";

}



<div class="container flex-column bg-light p-5 h-100">

    <div class="d-flex justify-content-center">
        <h1 class="text-dark">Cadastro de Clientes</h1>
    </div>
    <div class="d-flex justify-content-center mt-4">
        <form method="post" action="/Cliente/CadastroCliente" class="w-50 fs-6 row g-3 ">
            <input type="hidden" name="id" id="Cpf" value="@Model.Cpf">
            <div>
                <label for="txtNome">Nome:</label><br>
                <input type="text" class="form-control" name="Nome" id="txtNome" value="@Model.Nome">
            </div>
            <div>
                <label for="txtEmail">Email:</label><br>
                <input type="text" class="form-control" name="Email" id="txtEmail" placeholder="Ex: nome@email.com.br"
                    value="@Model.Email">
            </div>
            <div>
                <label for="txtCPF">CPF:</label><br>
                @{
                    if (Context.Request.RouteValues.ContainsKey("id"))
                    {

                        <input type="text" class="form-control" name="CPF" id="Cpf" placeholder="Ex: 12345678910" value="@Model.Cpf" readonly>
                    }
                    else
                    {

                        <input type="text" class="form-control" name="CPF" id="Cpf" placeholder="Ex: 12345678910"value="@Model.Cpf">
                    }
                }

            </div>
            <div>
                <label for="txtTelefone">Telefone:</label><br>
                <input type="text" class="form-control" name="Telefone" id="txtTelefone" value="@Model.Telefone">
            </div>
            <div class="d-flex flex-row justify-content-center m-3 ">
                <button class="btn btn-outline-success btn-lg me-4" type="submit">Salvar</button>
                @{
                    if (Context.Request.RouteValues.ContainsKey("id"))
                    {

                        <a class="btn btn-outline-danger btn-lg" href="/Cliente/ListaClientes" type="reset">Cancelar</a>

                    }
                    else
                    {

                        <a class="btn btn-outline-danger btn-lg" href="/Home/Index" type="reset">Cancelar</a>
                    }
                }

            </div>
        </form>
    </div>
</div>
