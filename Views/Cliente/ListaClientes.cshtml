@using ProjetoGAOS.Models;
@model IEnumerable<Cliente>

@{

    Layout="_Layout";
}
<div class="container">

    @if (Model.Count() > 0) {



         <table class="table table-striped table-bordered">
    
        <thead>
            <tr class="text-center">
                <th>CPF</th>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Telefone</th>
                <th class="px-5" >Ações</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var Cliente in Model)
            {
                <tr class="align-middle text-center ">
    
                    <td class="fw-bold">@Cliente.Cpf</td>
                    <td>@Cliente.Nome</td>
                    <td>@Cliente.Email</td>
                    <td>@Cliente.Telefone</td>
                    <td class="d-flex flex-row justify-content-center px-5">
                        <a class="btn btn-outline-danger  btn-lg me-4" href="/Cliente/DeletarCliente/@Cliente.Cpf"type="reset">Excluir</a>
                        <a class="btn btn-outline-primary btn-lg me-1" href="/Cliente/CadastroCliente/@Cliente.Cpf" type="button">Alterar</a>
                    </td>
                </tr>
    
            }
    
    
        </tbody>
    </table>



    }

    else{ 

        <h4>Nenhum cliente cadastrado!</h4>

    }

        

   
    
   
</div>