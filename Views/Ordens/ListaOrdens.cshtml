@using ProjetoGAOS.Models;
@model IEnumerable<OrdemDeServico>

@{

    Layout="_Layout";
}
<div class="container">

    @if (Model.Count() > 0) {



         <table class="table table-striped table-bordered">
    
        <thead>
            <tr class="text-center">
                <th>Cliente</th>
                <th>ID</th>
                <th>Data</th>
                <th>Identificador</th>
                <th>aparelho</th>
                <th class="px-5" >Ações</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var ordemDeServico in Model)
            {
                <tr class="align-middle text-center ">
    
                    <td class="fw-bold"></td>
                    <td>@ordemDeServico.Id</td>
                    <td>@ordemDeServico.Data</td>
                    <td>@ordemDeServico.Identificador</td>
                    <td>@ordemDeServico.</td>
                    <td class="d-flex flex-row justify-content-center px-5">
                        <a class="btn btn-outline-danger  btn-lg me-4" href=""type="reset">Excluir</a>
                        <a class="btn btn-outline-primary btn-lg me-1" href="/Ordens/CriaOrdem/@ordemDeServico.Id" type="button">Alterar</a>
                    </td>
                </tr>
    
            }
    
    
        </tbody>
    </table>



    }

    else{ 


         <h4 class="text-secondary fw-light mt-5"> Nenhuma Ordem de Serviço criada!</h4>

    }

        

   
    
   
</div>