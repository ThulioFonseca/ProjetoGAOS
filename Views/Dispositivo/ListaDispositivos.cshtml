@using ProjetoGAOS.Models;
@model IEnumerable<Dispositivo>

@{

    Layout = "_Layout";
}
<div class="container">

    @if (Model.Count() > 0)
    {



        <table class="table table-striped table-bordered">

            <thead>
                <tr class="text-center">
                    <th>IMEI</th>
                    <th>Modelo</th>
                    <th>Fabricante</th>
                    <th>Modelo</th>
                    <th>Proprietário</th>
                    <th class="px-5">Ações</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var Dispositivo in Model)
                {
                    <tr class="align-middle text-center ">

                        <td class="fw-bold">@Dispositivo.Identificador</td>
                        <td>@Dispositivo.Modelo</td>
                        <td>@Dispositivo.Fabricante</td>
                        <td>@Dispositivo.Categoria</td>
                        <td>@Dispositivo.ProprietarioNavigation.Nome</td>                      



                        <td class="d-flex flex-row justify-content-center px-5">
                            <a class="btn btn-outline-danger  btn-lg me-4"
                        href="/Dispositivo/DeletarDispositivo/@Dispositivo.Identificador" type="reset">Excluir</a>
                            <a class="btn btn-outline-primary btn-lg me-1"
                        href="/Dispositivo/CadastroDispositivo/@Dispositivo.Identificador" type="button">Alterar</a>
                        </td>
                    </tr>

                }


            </tbody>
        </table>



    }

    else
    {

        <h4>Nenhum Dispositivo cadastrado!</h4>

    }






</div>